/* Phablets */
@media (min-width: 550px)
  #activity-view
    & .activity-statut
      top: 4px
      right: 5px
    & .presence-button
      position: inherit
/* Tablettes */
//@media (min-width: 750px)

/* Desktop */
@media (min-width: 1000px)
  #activity-view
    border-radius: 3px
    width: 900px
    & .presence
      border: none
