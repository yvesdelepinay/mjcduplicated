{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reading_notification</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reading_notification.id }}</td>
            </tr>
            <tr>
                <th>Isread</th>
                <td>{% if reading_notification.isRead %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reading_notification_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reading_notification_edit', { 'id': reading_notification.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
